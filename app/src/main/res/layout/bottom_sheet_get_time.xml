<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet_layout"
    android:orientation="vertical"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_bottom_sheet"

        >
        <TextView
            android:id="@+id/getContent"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Khoảng thời gian"
            android:gravity="center"
            android:textSize="12sp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorDivider"
            />

        <TextView
            android:id="@+id/getDate"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="Ngày"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@color/colorPrimary"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorDivider"
            />
        <TextView
            android:id="@+id/getWeek"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="Tuần"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@color/colorPrimary"

            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorDivider"
            />
        <TextView
            android:id="@+id/getMonth"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="Tháng"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@color/colorPrimary"

            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorDivider"
            />

        <TextView
            android:id="@+id/getQuarter"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="Quý"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@color/colorPrimary"

            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorDivider"
            />
        <TextView
            android:id="@+id/getYear"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="Năm"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@color/colorPrimary"

            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorDivider"
            />
        <TextView
            android:id="@+id/getAll"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="Tất cả"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@color/colorPrimary"

            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorDivider"
            />
        <TextView
            android:id="@+id/getCustom"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="Tùy chỉnh"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@color/colorPrimary"

            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorDivider"
            />



    </LinearLayout>

    <TextView
        android:id="@+id/Cancel"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Hủy"
        android:gravity="center"
        android:textSize="18sp"
        android:textStyle="bold"
        android:background="@drawable/bg_bottom_sheet"
        android:textColor="@color/colorPrimary"

        />

</LinearLayout>